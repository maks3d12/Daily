<Window x:Class="Practic2_4__in_WPF.NoteHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic2_4__in_WPF"
        mc:Ignorable="d"
        Title="NoteHistory" Height="450" Width="487">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ListBox x:Name="table" SelectionChanged="ListBox_SelectionChanged"  Grid.Column="1"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40px"/>
                <RowDefinition Height="40px"/>
                <RowDefinition Height="40px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="Показать таблицу"  Height="30"    Click="Button_Click"/>
            <Button Grid.Row="1" Content="Удалить"  Height="30"  Click="Button_Click_1"/>
            <Button Grid.Row="2"  Content="Назад"  Height="30"  Click="Button_Click_2" />

        </Grid>
        
    </Grid>
</Window>
